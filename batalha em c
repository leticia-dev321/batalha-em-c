#include <stdio.h>

#define TAM 10
#define TAM_NAVIO 3

int main() {

    /* ======================================
       DECLARAÇÃO DO TABULEIRO 10x10
       ====================================== */
    int tabuleiro[TAM][TAM];

    int linha, coluna;
    int i;

    /* ======================================
       INICIALIZAÇÃO DO TABULEIRO COM ÁGUA (0)
       ====================================== */
    for (linha = 0; linha < TAM; linha++) {
        for (coluna = 0; coluna < TAM; coluna++) {
            tabuleiro[linha][coluna] = 0;
        }
    }

    /* ======================================
       DECLARAÇÃO DOS NAVIOS
       ====================================== */
    int navioHorizontal[TAM_NAVIO] = {3, 3, 3};
    int navioVertical[TAM_NAVIO] = {3, 3, 3};

    /* ======================================
       COORDENADAS INICIAIS (definidas no código)
       ====================================== */

    int linhaH = 2;
    int colunaH = 4;

    int linhaV = 5;
    int colunaV = 1;

    /* ======================================
       VALIDAÇÃO DO NAVIO HORIZONTAL
       ====================================== */
    if (colunaH + TAM_NAVIO <= TAM) {

        for (i = 0; i < TAM_NAVIO; i++) {

            if (tabuleiro[linhaH][colunaH + i] == 0) {
                tabuleiro[linhaH][colunaH + i] = navioHorizontal[i];
            }
        }
    }

    /* ======================================
       VALIDAÇÃO DO NAVIO VERTICAL
       ====================================== */
    if (linhaV + TAM_NAVIO <= TAM) {

        for (i = 0; i < TAM_NAVIO; i++) {

            if (tabuleiro[linhaV + i][colunaV] == 0) {
                tabuleiro[linhaV + i][colunaV] = navioVertical[i];
            }
        }
    }

    /* ======================================
       EXIBIÇÃO DO TABULEIRO
       ====================================== */

    printf("\nTABULEIRO BATALHA NAVAL:\n\n");

    for (linha = 0; linha < TAM; linha++) {
        for (coluna = 0; coluna < TAM; coluna++) {

            printf("%d ", tabuleiro[linha][coluna]);

        }
        printf("\n");
    }

    return 0;
}
#include <stdio.h>

#define TAM 10          // Tamanho do tabuleiro (10x10)
#define NAVIO_TAM 3     // Tamanho fixo dos navios
#define AGUA 0          // Valor que representa água
#define NAVIO 3         // Valor que representa parte do navio

/*
 Função para inicializar o tabuleiro com água (0)
*/
void inicializarTabuleiro(int tabuleiro[TAM][TAM]) {
    for (int i = 0; i < TAM; i++) {
        for (int j = 0; j < TAM; j++) {
            tabuleiro[i][j] = AGUA;
        }
    }
}

/*
 Função para verificar se um navio pode ser posicionado
 direção:
  'H' = Horizontal
  'V' = Vertical
  'D' = Diagonal principal (↘)
  'S' = Diagonal secundária (↙)
*/
int podePosicionar(int tabuleiro[TAM][TAM], int linha, int coluna, char direcao) {

    for (int i = 0; i < NAVIO_TAM; i++) {

        int novaLinha = linha;
        int novaColuna = coluna;

        // Define deslocamento conforme direção
        if (direcao == 'H') {
            novaColuna += i;
        } 
        else if (direcao == 'V') {
            novaLinha += i;
        } 
        else if (direcao == 'D') { // ↘
            novaLinha += i;
            novaColuna += i;
        } 
        else if (direcao == 'S') { // ↙
            novaLinha += i;
            novaColuna -= i;
        }

        // Verifica se está dentro dos limites
        if (novaLinha < 0 || novaLinha >= TAM ||
            novaColuna < 0 || novaColuna >= TAM) {
            return 0; // Fora do tabuleiro
        }

        // Verifica sobreposição
        if (tabuleiro[novaLinha][novaColuna] != AGUA) {
            return 0; // Já existe navio
        }
    }

    return 1; // Pode posicionar
}

/*
 Função para posicionar o navio no tabuleiro
*/
void posicionarNavio(int tabuleiro[TAM][TAM], int linha, int coluna, char direcao) {

    for (int i = 0; i < NAVIO_TAM; i++) {

        if (direcao == 'H') {
            tabuleiro[linha][coluna + i] = NAVIO;
        } 
        else if (direcao == 'V') {
            tabuleiro[linha + i][coluna] = NAVIO;
        } 
        else if (direcao == 'D') { // ↘
            tabuleiro[linha + i][coluna + i] = NAVIO;
        } 
        else if (direcao == 'S') { // ↙
            tabuleiro[linha + i][coluna - i] = NAVIO;
        }
    }
}

/*
 Função para exibir o tabuleiro no console
*/
void exibirTabuleiro(int tabuleiro[TAM][TAM]) {

    printf("\n=== TABULEIRO BATALHA NAVAL ===\n\n");

    for (int i = 0; i < TAM; i++) {
        for (int j = 0; j < TAM; j++) {
            printf("%d ", tabuleiro[i][j]);
        }
        printf("\n");
    }
}

int main() {

    int tabuleiro[TAM][TAM];

    // Inicializa o tabuleiro com água
    inicializarTabuleiro(tabuleiro);

    /*
      Definição das coordenadas iniciais dos navios
      (podem ser alteradas livremente)
    */

    // Navio 1 - Horizontal
    if (podePosicionar(tabuleiro, 1, 2, 'H')) {
        posicionarNavio(tabuleiro, 1, 2, 'H');
    }

    // Navio 2 - Vertical
    if (podePosicionar(tabuleiro, 4, 5, 'V')) {
        posicionarNavio(tabuleiro, 4, 5, 'V');
    }

    // Navio 3 - Diagonal principal (↘)
    if (podePosicionar(tabuleiro, 0, 0, 'D')) {
        posicionarNavio(tabuleiro, 0, 0, 'D');
    }

    // Navio 4 - Diagonal secundária (↙)
    if (podePosicionar(tabuleiro, 2, 8, 'S')) {
        posicionarNavio(tabuleiro, 2, 8, 'S');
    }

    // Exibe o tabuleiro final
    exibirTabuleiro(tabuleiro);

    return 0;
}
#include <stdio.h>

#define TAM 10
#define HAB_TAM 5

#define AGUA 0
#define NAVIO 3
#define HABILIDADE 5

/*
    Inicializa o tabuleiro com água
*/
void inicializarTabuleiro(int tab[TAM][TAM]) {
    for (int i = 0; i < TAM; i++) {
        for (int j = 0; j < TAM; j++) {
            tab[i][j] = AGUA;
        }
    }
}

/*
    Posiciona navios fixos (apenas para visualização)
*/
void posicionarNavios(int tab[TAM][TAM]) {
    // Horizontal
    for (int i = 0; i < 3; i++)
        tab[2][2 + i] = NAVIO;

    // Vertical
    for (int i = 0; i < 3; i++)
        tab[6 + i][7] = NAVIO;
}

/*
    Cria habilidade CONE (aponta para baixo)
*/
void criarCone(int cone[HAB_TAM][HAB_TAM]) {

    for (int i = 0; i < HAB_TAM; i++) {
        for (int j = 0; j < HAB_TAM; j++) {

            // Centro horizontal
            int centro = HAB_TAM / 2;

            // Forma de cone expandindo
            if (j >= centro - i && j <= centro + i)
                cone[i][j] = 1;
            else
                cone[i][j] = 0;
        }
    }
}

/*
    Cria habilidade CRUZ
*/
void criarCruz(int cruz[HAB_TAM][HAB_TAM]) {

    int centro = HAB_TAM / 2;

    for (int i = 0; i < HAB_TAM; i++) {
        for (int j = 0; j < HAB_TAM; j++) {

            if (i == centro || j == centro)
                cruz[i][j] = 1;
            else
                cruz[i][j] = 0;
        }
    }
}

/*
    Cria habilidade OCTAEDRO (losango)
*/
void criarOctaedro(int oct[HAB_TAM][HAB_TAM]) {

    int centro = HAB_TAM / 2;

    for (int i = 0; i < HAB_TAM; i++) {
        for (int j = 0; j < HAB_TAM; j++) {

            // Distância Manhattan para formar losango
            if (abs(i - centro) + abs(j - centro) <= centro)
                oct[i][j] = 1;
            else
                oct[i][j] = 0;
        }
    }
}

/*
    Sobrepõe habilidade no tabuleiro
*/
void aplicarHabilidade(int tab[TAM][TAM], int hab[HAB_TAM][HAB_TAM], int origemLinha, int origemColuna) {

    int offset = HAB_TAM / 2;

    for (int i = 0; i < HAB_TAM; i++) {
        for (int j = 0; j < HAB_TAM; j++) {

            if (hab[i][j] == 1) {

                int linhaTab = origemLinha + (i - offset);
                int colTab = origemColuna + (j - offset);

                // Verifica limites do tabuleiro
                if (linhaTab >= 0 && linhaTab < TAM &&
                    colTab >= 0 && colTab < TAM) {

                    // Marca área afetada (não sobrescreve navio)
                    if (tab[linhaTab][colTab] == AGUA)
                        tab[linhaTab][colTab] = HABILIDADE;
                }
            }
        }
    }
}

/*
    Exibe tabuleiro com símbolos diferentes
*/
void exibirTabuleiro(int tab[TAM][TAM]) {

    printf("\n=== TABULEIRO COM HABILIDADES ===\n\n");

    for (int i = 0; i < TAM; i++) {
        for (int j = 0; j < TAM; j++) {

            if (tab[i][j] == AGUA)
                printf(". ");
            else if (tab[i][j] == NAVIO)
                printf("N ");
            else if (tab[i][j] == HABILIDADE)
                printf("* ");
        }
        printf("\n");
    }
}

int main() {

    int tabuleiro[TAM][TAM];

    int cone[HAB_TAM][HAB_TAM];
    int cruz[HAB_TAM][HAB_TAM];
    int octaedro[HAB_TAM][HAB_TAM];

    inicializarTabuleiro(tabuleiro);
    posicionarNavios(tabuleiro);

    criarCone(cone);
    criarCruz(cruz);
    criarOctaedro(octaedro);

    // Pontos de origem definidos diretamente
    aplicarHabilidade(tabuleiro, cone, 1, 5);
    aplicarHabilidade(tabuleiro, cruz, 5, 2);
    aplicarHabilidade(tabuleiro, octaedro, 7, 7);

    exibirTabuleiro(tabuleiro);

    return 0;
}
